"""Node is defined as

class Node:
    def __init__(self, data):
		self.data = data
		self.next = None
"""
class Solution:
    def reverseKGroup(self, head, k):
        # Code here
        arr = []
        curr = head
        
        while curr:
            arr.append(curr.data)
            curr = curr.next
        
        n = len(arr)
        
        for i in range(0, n, k):
            arr[i: i + k] = reversed(arr[i: i + k])
        
        curr = Node(arr[0])
        head = curr
        
        for i in range(1, n):
            newNode = Node(arr[i])
            curr.next = newNode
            curr = curr.next
        
        return head

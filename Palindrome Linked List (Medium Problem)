'''
	{
		# Node Class
		class Node:
		    def __init__(self, data):   # data -> value stored in node
		        self.data = data
		        self.next = None
	}

'''
class Solution:
    def isPalindrome(self, head):
        #code here
        arr = []
        curr = head
        
        while curr:
            arr.append(curr.data)
            curr = curr.next
        
        curr = head
        arr.reverse()
        i = 0
        
        while curr:
            if curr.data != arr[i]:
                return False
            curr = curr.next
            i += 1
        
        return True

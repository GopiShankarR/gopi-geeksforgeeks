'''
	Function Arguments: head of the original list.
	Return Type: head of the new list formed.
	{
		# Node Class
		class Node:
		    def __init__(self, data):   # data -> value stored in node
		        self.data = data
		        self.next = None
	}'''
	
class Solution:
    def segregate(self, head):
        #code here
        arr = []
        curr = head
        
        while curr:
            arr.append(curr.data)
            curr = curr.next
        
        arr.sort()
        
        curr = head
        
        for i in range(len(arr)):
            curr.data = arr[i]
            curr = curr.next
        
        
        return head

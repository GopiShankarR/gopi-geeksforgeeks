class Solution:
    def maxSum(self, arr):
        #code here
        n = len(arr)
        
        if n <= 1:
            return -1
        
        maxTotal = -1
        
        for i in range(n - 1):
            pairSum = arr[i] + arr[i + 1]
            maxTotal = max(maxTotal, pairSum)
            
        return maxTotal

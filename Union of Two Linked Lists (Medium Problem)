class Solution:
    def union(self, head1,head2):
        # code here
        # return head of resultant linkedlist
        hashSet = set()
        
        while head1:
            hashSet.add(head1.data)
            head1 = head1.next
        
        while head2:
            hashSet.add(head2.data)
            head2 = head2.next
        
        listSet = sorted(hashSet)
        n = len(listSet)
        
        curr = Node(0)
        head = curr
        
        for i in range(n):
            newNode = Node(listSet[i])
            curr.next = newNode
            curr = curr.next
        
        return head.next
